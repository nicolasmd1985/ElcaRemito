<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="seguridad.elca.elcaremito.Remito">




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/elc_alfa"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="REMITO"
            android:id="@+id/remito"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"
        >



        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5E3EE"
            android:weightSum="1">


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/scrollView2"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/scrollView2">

                    <ListView
                        android:id="@android:id/list"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true">


                    </ListView>
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Items Modificados o Instalados"
            android:id="@+id/textView9"
            android:textColor="#0c7a26"
            android:textAlignment="center"
            android:background="#c9e0e5" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/linearLayout2">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textLongMessage"
                android:ems="10"
                android:id="@+id/observaciones"
                android:hint="Agregar observaciones"
                android:background="@android:color/background_light"
                android:capitalize="sentences"
                android:elegantTextHeight="true"
                android:layout_weight="2.50"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginTop="5dp" />

            <seguridad.elca.elcaremito.DrawingView
                android:id="@+id/drawing"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:background="#FFFFFFFF"

                android:layout_below="@+id/observaciones"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:id="@+id/aclaracion"
                android:hint="AclaraciÃ³n "
                android:textColorHint="#ceff48"
                android:textColor="#75a2ba"
                android:layout_below="@+id/drawing"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:capitalize="words"
                android:inputType="textPersonName" />

        </RelativeLayout>

        <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Finalizar"
           android:id="@+id/save"

           android:onClick="savere"
            android:textSize="13dp"
            android:textStyle="normal"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>